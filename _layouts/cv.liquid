---
layout: default
title: "Curriculum Vitae"
cv_pdf: "KeLin_CV_Jan2025.pdf"  # This corresponds to page.cv_pdf from cv.md
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    {% if page.cv_pdf %}
      <a href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}" target="_blank" rel="noopener noreferrer" class="float-right">
        <i class="fa-solid fa-file-pdf"></i>
      </a>
    {% endif %}
  </header>
  <div class="post-content">
    {% if page.cv_pdf %}
      {% pdf {{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }} width=100% height=800px %}
    {% else %}
      <p>No CV PDF specified.</p>
    {% endif %}
  </div>
</div>
